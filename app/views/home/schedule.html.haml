%h1
  Friday, February 15, 2013
%aside.schedule
  - Talk.all.each do |talk|
    %article.vevent{ :class => (talk.plenary? ? "vevent-talk" : nil) }
      %h1.summary
        = talk.title
      %time.dtstart{:datetime => talk.start.to_time.iso8601}
        = talk.start.hour
        \:
        %span.mins
          = talk.start.min
      %h2
        = talk.speaker
      %p.description
        = talk.description
